/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for testing LONG-READ mode
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/scnanoseq -profile test_longread,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Test profile - Long-read'
    config_profile_description  = 'Minimal test dataset to check long-read pipeline function'

    // Input type
    input_type                  = 'long_read'

    // Input data (using existing test dataset)
    input                       = 'https://raw.githubusercontent.com/nf-core/test-datasets/scnanoseq/samplesheet/samplesheet_test.csv'

    // Genome references
    genome_fasta                = "https://raw.githubusercontent.com/nf-core/test-datasets/scnanoseq/reference/chr21.fa"
    gtf                         = "https://raw.githubusercontent.com/nf-core/test-datasets/scnanoseq/reference/chr21.gtf"

    // Barcode options
    barcode_format              = "10X_3v3"

    // Analysis options
    quantifier                  = "isoquant"

    // Skip some steps for faster testing
    skip_seurat                 = true
    skip_multiqc               = false

}
