/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for testing SHORT-READ mode
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/scnanoseq -profile test_shortread,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Test profile - Short-read'
    config_profile_description  = 'Minimal test dataset to check short-read pipeline function'

    // Input type
    input_type                  = 'short_read'

    // Input data - Note: For short-read, you need paired-end FASTQ files
    // This is a placeholder - you'll need to provide actual R1 and R2 files
    // Format: sample,fastq_1,fastq_2,cell_count
    input                       = "${projectDir}/assets/samplesheet/samplesheet_shortread_test.csv"

    // Genome references
    genome_fasta                = "https://raw.githubusercontent.com/nf-core/test-datasets/scnanoseq/reference/chr21.fa"
    gtf                         = "https://raw.githubusercontent.com/nf-core/test-datasets/scnanoseq/reference/chr21.gtf"

    // Barcode options
    barcode_length              = 16
    umi_length                  = 12

    // Analysis options
    quantifier                  = "isoquant"

    // Skip some steps for faster testing
    skip_seurat                 = true
    skip_multiqc               = false
    skip_dedup                 = false  // Deduplication is mandatory for short-read

}
